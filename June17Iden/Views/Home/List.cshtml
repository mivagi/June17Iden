
@{
    ViewData["Title"] = "List";
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td><a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.Id">Choose</a></td>
            </tr>
        }
    </tbody>
</table>
<form method="post" asp-action="Logout" asp-controller="Account">
    <input type="submit" value="Exit" class="btn btn-danger"/>
</form>

